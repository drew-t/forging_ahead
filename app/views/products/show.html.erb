<div class="container-fluid projects">
  <div class="row">
    <% @product_styles.each do |product_style| %>
    <div class="col-sm-3">
      <div class="card projectStyle" id="projectStyle-<%=product_style.id%>">
        <div class="card-block">
          <img class="card-img-top" src="<%= product_style.attachment.image.url %>" >
        </div>
        <h4 class="card-title"><%= product_style.style.name %></h4>
      </div>
    </div>
  <% end %>

  </div>
</div>

