<%= render partial: 'shared/nav-bar', locals: { items: @product_styles } %>
<div class="container-fluid projects">
  <div class="row">
    <% @product_styles.each do |product_style| %>
    <div class="col-sm-3">
      <a href="#" class="card projectStyle" id="projectStyle-<%=product_style.id%>" >
        <div class="card-block">
          <img class="card-img-top project-style-img" src="<%= product_style.attachment.image.url if product_style.attachment %>" >
        </div>
        <h4 class="card-title"><%= product_style.style.name %></h4>
      </a>
    </div>
  <% end %>

  </div>
</div>

