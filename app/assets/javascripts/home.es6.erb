$(document).ready(function(){
  let navLights = $(".nav-lights");

  for(let i = 0; i < navLights.length; i++) {
    navLights[i].addEventListener("mouseover", lightUp);
    navLights[i].addEventListener("mouseout", lightDown);
  };

  function lightUp() {
    this.children[0].src = "<%= asset_path('light_one.png') %>"
    this.children[1].classList.add("lit-up-color")
  };

  function lightDown() {
    this.children[0].src = "<%= asset_path('light_one_alt.png') %>"
    this.children[1].classList.remove("lit-up-color")
  };
});
